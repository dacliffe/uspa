<style>
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }

  .split-banner {
    display: flex;
    width: 100%;
    gap: {{ section.settings.gap }}px;
  }

  .split-banner__half {
    flex: 1;
    position: relative;
    overflow: hidden;
  }

  .split-banner__image-wrapper {
    position: relative;
    width: 100%;
    height: 100%;
  }

  .split-banner__half::after {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: {{ section.settings.overlay_color }};
    opacity: {{ section.settings.overlay_opacity | divided_by: 100.0 }};
    z-index: 1;
  }

  .split-banner__half img,
  .split-banner__half video {
    width: 100%;
    height: 100%;
    object-fit: cover;
    position: relative;
    z-index: 0;
  }

  .split-banner__content {
    position: absolute;
    width: auto;
    padding: 0 20px;
    z-index: 2;
  }

  .split-banner__title {
    color: {{ section.settings.text_color }};
    margin-bottom: 10px;
  }

  .split-banner__subtitle {
    color: {{ section.settings.text_color }};
    margin-bottom: 20px;
  }

  .split-banner__text {
    color: {{ section.settings.text_color }};
    margin-bottom: 20px;
  }

  .split-banner__button {
    display: inline-block;
    padding: 12px 24px;
    text-decoration: none;
    border-radius: 4px;
    font-weight: 500;
    transition: all 0.3s ease;
  }

  .split-banner__button--primary {
    background-color: {{ section.settings.button_bg_color }};
    color: {{ section.settings.button_text_color }};
    border: 2px solid {{ section.settings.button_bg_color }};
  }

  .split-banner__button--primary:hover {
    background-color: transparent;
    color: {{ section.settings.button_bg_color }};
  }

  .split-banner__button--secondary {
    background-color: transparent;
    color: {{ section.settings.button_bg_color }};
    border: 2px solid {{ section.settings.button_bg_color }};
  }

  .split-banner__button--secondary:hover {
    background-color: {{ section.settings.button_bg_color }};
    color: {{ section.settings.button_text_color }};
  }

  .split-banner__buttons {
    display: flex;
    flex-wrap: wrap;
    gap: 10px;
    justify-content: center;
  }

  .split-banner__image--desktop {
    display: block;
  }

  .split-banner__image--mobile {
    display: none;
  }

  /* Desktop Styles */
  @media screen and (min-width: 768px) {
    .split-banner__content {
      width: auto;
    }

    .split-banner__content[data-vertical='top'] {
      top: 5%;
      bottom: auto;
    }

    .split-banner__content[data-vertical='middle'] {
      top: 50%;
      bottom: auto;
      transform: translateY(-50%);
    }

    .split-banner__content[data-vertical='bottom'] {
      bottom: 5%;
      top: auto;
    }

    .split-banner__content[data-horizontal='left'] {
      left: 5%;
      right: auto;
      transform: none;
    }

    .split-banner__content[data-horizontal='center'] {
      left: 50%;
      right: auto;
      transform: translateX(-50%);
    }

    .split-banner__content[data-horizontal='right'] {
      right: 5%;
      left: auto;
      transform: none;
    }

    .split-banner__content[data-content-align='left'] {
      text-align: left;
    }

    .split-banner__content[data-content-align='center'] {
      text-align: center;
    }

    .split-banner__content[data-content-align='right'] {
      text-align: right;
    }

    .split-banner__content[data-vertical='middle'][data-horizontal='center'] {
      top: 50%;
      left: 50%;
      right: auto;
      bottom: auto;
      transform: translate(-50%, -50%);
    }

    .split-banner__content[data-vertical='middle'][data-horizontal='left'] {
      top: 50%;
      left: 5%;
      right: auto;
      bottom: auto;
      transform: translateY(-50%);
    }

    .split-banner__content[data-vertical='middle'][data-horizontal='right'] {
      top: 50%;
      right: 5%;
      left: auto;
      bottom: auto;
      transform: translateY(-50%);
    }
  }

  /* Mobile Styles */
  @media screen and (max-width: 767px) {
    .split-banner__content {
      width: 90%;
      max-width: 100%;
      padding: 0 15px;
      transform: none !important;
    }

    .split-banner__content[data-mobile-vertical='top'] {
      top: 5%;
      bottom: auto;
      transform: none !important;
    }

    .split-banner__content[data-mobile-vertical='middle'] {
      top: 50%;
      bottom: auto;
      transform: translateY(-50%) !important;
    }

    .split-banner__content[data-mobile-vertical='bottom'] {
      bottom: 5%;
      top: auto;
      transform: none !important;
    }

    .split-banner__content[data-mobile-horizontal='left'] {
      left: 5%;
      right: auto;
      transform: none !important;
    }

    .split-banner__content[data-mobile-horizontal='center'] {
      left: 50%;
      right: auto;
      transform: translateX(-50%) !important;
    }

    .split-banner__content[data-mobile-horizontal='right'] {
      right: 5%;
      left: auto;
      transform: none !important;
    }

    .split-banner__content[data-mobile-content-align='left'] {
      text-align: left;
    }

    .split-banner__content[data-mobile-content-align='center'] {
      text-align: center;
    }

    .split-banner__content[data-mobile-content-align='right'] {
      text-align: right;
    }

    .split-banner__content[data-mobile-vertical='middle'][data-mobile-horizontal='center'] {
      top: 50%;
      left: 50%;
      right: auto;
      bottom: auto;
      transform: translate(-50%, -50%) !important;
    }

    .split-banner__content[data-mobile-vertical='middle'][data-mobile-horizontal='left'] {
      top: 50%;
      left: 5%;
      right: auto;
      bottom: auto;
      transform: translateY(-50%) !important;
    }

    .split-banner__content[data-mobile-vertical='middle'][data-mobile-horizontal='right'] {
      top: 50%;
      right: 5%;
      left: auto;
      bottom: auto;
      transform: translateY(-50%) !important;
    }
  }

  @media screen and (max-width: 749px) {
    .split-banner {
      flex-direction: column;
      gap: {{ section.settings.mobile_gap }}px;
      padding-right: 0 !important;
      padding-left: 0 !important;
    }

    .split-banner__half {
      position: relative;
      width: 100%;
      min-height: 250px;
    }
    .split-banner__half::before {
      content: "";
      display: block;
      padding-top: 125%; /* 4/5 aspect ratio = 80% (use 125% for 4/5, tweak as needed) */
    }
    .split-banner__image-wrapper,
    .split-banner__content {
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      bottom: 0;
    }
    .split-banner__image--desktop {
      display: none;
    }
    .split-banner__image--mobile {
      display: block;
    }
    .split-banner__title {
      font-size: calc({{ block.settings.title_size }}px * 0.8) !important;
    }
    .split-banner__subtitle {
      font-size: calc({{ block.settings.subtitle_size }}px * 0.8) !important;
    }
    .split-banner__buttons {
      flex-direction: column;
      align-items: center;
    }
    .split-banner__button {
      width: 100%;
      text-align: center;
    }
  }

  @media screen and (min-width: 750px) {
    .split-banner__button {
      width: auto;
    }
    .split-banner__content[data-content-align='center'] {
      width: 100%;
    }
    .split-banner__content[data-content-align='left'],
    .split-banner__content[data-content-align='right'] {
      width: auto;
    }
  }

  @media screen and (max-width: 749px) {
    .split-banner {
      padding-right: 0 !important;
      padding-left: 0 !important;
    }
  }
</style>

<div class="split-banner page-width section-{{ section.id }}-padding">
  {%- for block in section.blocks -%}
    <div class="split-banner__half" {{ block.shopify_attributes }}>
      {%- if block.settings.use_video -%}
        <div class="split-banner__image-wrapper">
          {{ block.settings.video | video_tag: autoplay: true, loop: true, muted: true, controls: false }}
        </div>
      {%- else -%}
        <div class="split-banner__image-wrapper">
          {%- if block.settings.image != blank -%}
            {{
              block.settings.image
              | image_url: width: 2000
              | image_tag:
                loading: 'lazy',
                width: block.settings.image.width,
                height: block.settings.image.height,
                class: 'split-banner__image--desktop'
            }}
          {%- endif -%}

          {%- if block.settings.mobile_image != blank -%}
            {{
              block.settings.mobile_image
              | image_url: width: 1000
              | image_tag:
                loading: 'lazy',
                width: block.settings.mobile_image.width,
                height: block.settings.mobile_image.height,
                class: 'split-banner__image--mobile'
            }}
          {%- elsif block.settings.image != blank -%}
            {{
              block.settings.image
              | image_url: width: 1000
              | image_tag:
                loading: 'lazy',
                width: block.settings.image.width,
                height: block.settings.image.height,
                class: 'split-banner__image--mobile'
            }}
          {%- endif -%}
        </div>
      {%- endif -%}

      <div
        class="split-banner__content"
        data-vertical="{{ block.settings.vertical_alignment }}"
        data-horizontal="{{ block.settings.horizontal_alignment }}"
        data-content-align="{{ block.settings.content_alignment }}"
        data-mobile-vertical="{{ block.settings.mobile_vertical_alignment }}"
        data-mobile-horizontal="{{ block.settings.mobile_horizontal_alignment }}"
        data-mobile-content-align="{{ block.settings.mobile_content_alignment }}"
      >
        {%- if block.settings.title != blank -%}
          <h2
            class="split-banner__title"
            style="font-size: {{ block.settings.title_size }}px; font-weight: {{ block.settings.title_weight }};"
          >
            {{ block.settings.title }}
          </h2>
        {%- endif -%}

        {%- if block.settings.subtitle != blank -%}
          <div
            class="split-banner__subtitle"
            style="font-size: {{ block.settings.subtitle_size }}px; font-weight: {{ block.settings.subtitle_weight }};"
          >
            {{ block.settings.subtitle }}
          </div>
        {%- endif -%}

        {%- if block.settings.text != blank -%}
          <div class="split-banner__text">
            {{ block.settings.text }}
          </div>
        {%- endif -%}

        <div class="split-banner__buttons">
          {%- for i in (1..4) -%}
            {%- assign button_text = 'button_text_' | append: i -%}
            {%- assign button_style = 'button_style_' | append: i -%}
            {%- assign button_link = 'button_link_' | append: i -%}

            {%- if block.settings[button_text] != blank -%}
              <a
                href="{{ block.settings[button_link] }}"
                class="split-banner__button split-banner__button--{{ block.settings[button_style] }}"
                style="font-size: {{ section.settings.button_font_size }}px;"
              >
                {{ block.settings[button_text] }}
              </a>
            {%- endif -%}
          {%- endfor -%}
        </div>
      </div>
    </div>
  {%- endfor -%}
</div>

