{% comment %}
  Renders a product card

  Accepts:
  - card_product: {Object} Product Liquid object (optional)
  - media_aspect_ratio: {String} Size of the product image card. Values are "square" and "portrait". Default is "square" (optional)
  - image_shape: {String} Image mask to apply to the product image card. Values are "arch", "blob", "chevronleft", "chevronright", "diamond", "parallelogram", and "round". (optional)
  - show_vendor: {Boolean} Show the product vendor. Default: false
  - show_rating: {Boolean} Show the product rating. Default: false
  - lazy_load: {Boolean} Image should be lazy loaded. Default: true (optional)
  - skip_styles: {Boolean} Don't include component styles. Useful when rendering multiple product cards in a loop. Default: false (optional)
  - quick_add: {Boolean} Show the quick add button.
  - section_id: {String} The ID of the section that contains this card.
  - placeholder_image: {String} The placeholder image to use when no product exists. Default: 'product-apparel-2' (optional)

  Usage:
  {% render 'card-product', show_vendor: section.settings.show_vendor %}
{% endcomment %}

{%- unless skip_styles -%}
  {{ 'component-rating.css' | asset_url | stylesheet_tag }}
  {{ 'component-price.css' | asset_url | stylesheet_tag }}
  {{ 'card-quick-add.css' | asset_url | stylesheet_tag }}
  {{ 'card-product-carousel.css' | asset_url | stylesheet_tag }}
{%- endunless -%}

{%- if card_product and card_product != empty -%}
  {%- liquid
    assign ratio = 1
    if card_product.featured_media and media_aspect_ratio == 'portrait'
      assign ratio = 0.8
    elsif card_product.featured_media and media_aspect_ratio == 'adapt'
      assign ratio = card_product.featured_media.aspect_ratio
    endif
    if ratio == 0 or ratio == null
      assign ratio = 1
    endif
  -%}

  <div class="product-card">
    <!-- Image Section with Carousel -->
    <div class="product-card__media" style="--ratio-percent: {{ 1 | divided_by: ratio | times: 100 }}%;">
      <a href="{{ card_product.url }}" class="product-card__media-link">
        {%- if card_product.featured_media -%}
          <div class="product-card__carousel">
            <div class="product-card__carousel-track">
              {%- for media in card_product.media limit: 4 -%}
                <div
                  class="product-card__slide{% if forloop.first %} active{% endif %}"
                  data-index="{{ forloop.index0 }}"
                >
                  <img
                    srcset="
                      {%- if media.width >= 165 -%}{{ media | image_url: width: 165 }} 165w,{%- endif -%}
                      {%- if media.width >= 360 -%}{{ media | image_url: width: 360 }} 360w,{%- endif -%}
                      {%- if media.width >= 533 -%}{{ media | image_url: width: 533 }} 533w,{%- endif -%}
                      {%- if media.width >= 720 -%}{{ media | image_url: width: 720 }} 720w,{%- endif -%}
                      {%- if media.width >= 940 -%}{{ media | image_url: width: 940 }} 940w,{%- endif -%}
                      {%- if media.width >= 1066 -%}{{ media | image_url: width: 1066 }} 1066w,{%- endif -%}
                      {{ media | image_url }} {{ media.width }}w
                    "
                    src="{{ media | image_url: width: 533 }}"
                    sizes="(min-width: {{ settings.page_width }}px) {{ settings.page_width | minus: 130 | divided_by: 4 }}px, (min-width: 990px) calc((100vw - 130px) / 4), (min-width: 750px) calc((100vw - 120px) / 3), calc((100vw - 35px) / 2)"
                    alt="{{ media.alt | escape }}"
                    {% unless forloop.first %}
                      loading="lazy"
                    {% endunless %}
                    width="{{ media.width }}"
                    height="{{ media.height }}"
                  >
                </div>
              {%- endfor -%}
            </div>
          </div>
        {%- else -%}
          <div class="product-card__placeholder">
            {%- if placeholder_image -%}
              {{ placeholder_image | placeholder_svg_tag: 'placeholder-svg' }}
            {%- else -%}
              {{ 'product-apparel-2' | placeholder_svg_tag: 'placeholder-svg' }}
            {% endif %}
          </div>
        {%- endif -%}
      </a>

      <!-- Carousel Navigation -->
      {%- if card_product.media.size > 1 -%}
        <div class="product-card__nav">
          <button
            type="button"
            class="product-card__nav-btn product-card__nav-prev"
            data-direction="prev"
            aria-label="{{ 'products.product.media.previous' | t }}"
          >
            {% render 'icon-caret' %}
          </button>
          <button
            type="button"
            class="product-card__nav-btn product-card__nav-next"
            data-direction="next"
            aria-label="{{ 'products.product.media.next' | t }}"
          >
            {% render 'icon-caret' %}
          </button>
        </div>
      {%- endif -%}

      <!-- Badge (Top Right) -->
      <div class="product-card__badge">
        {%- if card_product.compare_at_price > card_product.price and card_product.available -%}
          {%- assign discount_percentage = card_product.compare_at_price
            | minus: card_product.price
            | times: 100
            | divided_by: card_product.compare_at_price
            | round
          -%}
          <span class="badge badge--sale">{{ discount_percentage }}% OFF</span>
        {%- elsif card_product.tags contains 'New' -%}
          <span class="badge badge--new">NEW</span>
        {%- elsif card_product.tags contains 'best-seller' -%}
          <span class="badge badge--bestseller">BEST SELLER</span>
        {%- elsif card_product.available == false -%}
          <span class="badge badge--soldout">{{ 'products.product.sold_out' | t }}</span>
        {%- endif -%}
      </div>

      <!-- Quick Add (Bottom of Image) -->
      <div class="product-card__quick-add">
        {% render 'card-quick-add', product: card_product %}
      </div>

      <!-- Mobile Cart Icon -->
      <div class="mobile-cart-icon" role="button" tabindex="0">
        {{ 'icon-bag.svg' | inline_asset_content }}
      </div>
    </div>

    <!-- Content Section Below Image -->
    <div class="product-card__content">
      <a href="{{ card_product.url }}" class="product-card__content-link">
        <!-- Product Title -->
        <h3 class="card__heading h5">{{ card_product.title | escape }}</h3>

        <!-- Vendor -->
        {%- if show_vendor -%}
          <div class="product-card__vendor">{{ card_product.vendor }}</div>
        {%- endif -%}

        <!-- Rating -->
        {%- if show_rating and card_product.metafields.reviews.rating.value != blank -%}
          {% liquid
            assign rating_decimal = 0
            assign decimal = card_product.metafields.reviews.rating.value.rating | modulo: 1
            if decimal >= 0.3 and decimal <= 0.7
              assign rating_decimal = 0.5
            elsif decimal > 0.7
              assign rating_decimal = 1
            endif
          %}
          <div
            class="product-card__rating"
            role="img"
            aria-label="{{ 'accessibility.star_reviews_info' | t: rating_value: card_product.metafields.reviews.rating.value, rating_max: card_product.metafields.reviews.rating.value.scale_max }}"
          >
            <span
              class="rating-star"
              style="--rating: {{ card_product.metafields.reviews.rating.value.rating | floor }}; --rating-max: {{ card_product.metafields.reviews.rating.value.scale_max }}; --rating-decimal: {{ rating_decimal }};"
            ></span>
            <span class="rating-text">({{ card_product.metafields.reviews.rating_count }})</span>
          </div>
        {%- endif -%}

        <!-- Price -->
        <div class="product-card__price">
          {% render 'price', product: card_product, price_class: '', show_compare_at_price: true %}
        </div>

        <!-- Bottom Label -->
        {%- if card_product.metafields.custom.bottom_label != blank -%}
          <div class="product-card__bottom-label h5">
            {{ card_product.metafields.custom.bottom_label | upcase }}
          </div>
        {%- endif -%}
      </a>

      <!-- Custom Swatches -->
      {%- assign style_group = card_product.metafields.custom.style_group.value -%}
      {%- if style_group != blank -%}
        {%- assign style_group_products = style_group.products.value | reverse | reverse -%}
        {%- if style_group_products.size > 0 -%}
          <div class="product-card__swatches">
            {% for p in style_group_products %}
              {%- assign swatch = p.metafields.custom.colour_swatch.value -%}
              {%- assign hex = swatch.colour -%}
              {%- assign src = swatch.image.src -%}
              <span
                class="product-card__swatch {% if p.handle == card_product.handle %}active{% endif %}"
                title="{{ p.title | escape }}"
                data-url="{{ p.url }}"
                data-id="{{ p.id }}"
                data-variant-id="{{ p.selected_or_first_available_variant.id }}"
                data-badge="{% if p.compare_at_price > p.price and p.available %}{% assign discount_percentage = p.compare_at_price | minus: p.price | times: 100 | divided_by: p.compare_at_price | round %}{{ discount_percentage }}% OFF{% elsif p.tags contains 'New' %}NEW{% elsif p.tags contains 'best-seller' %}BEST SELLER{% elsif p.available == false %}{{ 'products.product.sold_out' | t }}{% endif %}"
                data-label="{{ p.metafields.custom.bottom_label | upcase }}"
                style="{% if src != blank %}background-image: url('{{ src | image_url: width: 40, height: 40, crop: 'center' }}');{% else %}background-color: {{ hex }};{% endif %}"
              >
                <span class="visually-hidden">{{ p.title }}</span>
              </span>
            {% endfor %}
          </div>
          <p class="product-card__colours-available">{{ style_group_products.size }} COLOURS AVAILABLE</p>
        {%- endif -%}
      {%- endif -%}
    </div>
  </div>

{%- else -%}
  <!-- Placeholder Card -->
  {%- liquid
    assign ratio = 1
    if media_aspect_ratio == 'portrait'
      assign ratio = 0.8
    endif
  -%}

  <div class="product-card">
    <div class="product-card__media" style="--ratio-percent: {{ 1 | divided_by: ratio | times: 100 }}%;">
      <div class="product-card__placeholder">
        {%- if placeholder_image -%}
          {{ placeholder_image | placeholder_svg_tag: 'placeholder-svg' }}
        {%- else -%}
          {{ 'product-apparel-2' | placeholder_svg_tag: 'placeholder-svg' }}
        {% endif %}
      </div>
    </div>

    <div class="product-card__content">
      <h3 class="product-card__title">{{ 'onboarding.product_title' | t }}</h3>
      <div class="product-card__price">
        {% render 'price', placeholder: true, show_compare_at_price: true %}
      </div>
    </div>
  </div>
{%- endif -%}
