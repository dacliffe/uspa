<style>
  .size-chart-body td {
    padding: 0 1em !important;
  }

  #size-chart-popup {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, 0.5);
    display: flex;
    justify-content: center;
    align-items: center;
    z-index: 1000;
  }

  #size-chart-popup.hidden {
    display: none;
  }

  #size-chart-close {
    position: absolute;
    top: 10px;
    right: 15px;
    font-size: 28px;
    font-weight: bold;
    cursor: pointer;
    z-index: 1001;
  }

  #size-chart-close:hover {
    color: #000;
    text-decoration: none;
  }

  .size-chart-sections {
    max-height: 400px;
    overflow-y: auto;
    padding: 10px;
  }

  @media screen and (max-width: 768px) {
    .size-chart-sections {
      max-height: 70vh;
      padding: 5px;
    }
  }

  .size-chart-section {
    margin-bottom: 30px;
  }

  .size-chart-section h4 {
    color: #333;
    margin-bottom: 15px;
    font-weight: bold;
    text-align: center;
    background-color: #f8f8f8;
    padding: 10px;
    border-radius: 5px;
  }

  .size-chart-section table {
    width: 100%;
    margin-bottom: 20px;
    border-collapse: collapse;
  }

  .size-chart-section th,
  .size-chart-section td {
    padding: 8px 4px;
    text-align: center;
    border: 1px solid #ddd;
    font-size: 12px;
  }

  .measuring-guide {
    background-color: #f9f9f9;
    padding: 15px;
    border-radius: 5px;
  }

  .measuring-instructions p {
    margin-bottom: 8px;
    font-size: 13px;
    line-height: 1.4;
  }

  .measuring-instructions strong {
    color: #333;
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', function () {
    // Close modal when clicking outside of it
    document.getElementById('size-chart-popup').addEventListener('click', function (e) {
      if (e.target === this) {
        this.classList.add('hidden');
      }
    });

    // Close modal with escape key
    document.addEventListener('keydown', function (e) {
      if (e.key === 'Escape') {
        document.getElementById('size-chart-popup').classList.add('hidden');
      }
    });
  });
</script>
